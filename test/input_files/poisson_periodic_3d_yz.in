# Materials
[Materials]
   [./TestMaterial]
      [./ThermalConductivity]
          model = 'constant'
          value = '1.0'
      [../Density]
         value = '1.0'
      [../SpecificHeat]
         model = 'constant'
         value = '1.0'
[]

# Options related to all Physics
[Physics]

   enabled_physics = 'HeatConduction ParsedSourceTerm'

   [./HeatConduction]

      material = 'TestMaterial'

   [../ParsedSourceTerm]
      [./Function]
         # Forcing function corresponding to \Delta u, where u = sin(pi*x)*cos(2*pi*z)*cos(2*pi*y)
         value = '4*pi^2*sin(pi*x)*cos(2*pi*z)*cos(2*pi*y) + sin(pi*x)*4*pi^2*cos(2*pi*z)*cos(2*pi*y) + pi^2*sin(pi*x)*cos(2*pi*z)*cos(2*pi*y)'
      [../Variables]
         names = 'u'
         FE_types = 'LAGRANGE'
         FE_orders = 'FIRST'
[]

[BoundaryConditions]
   bc_ids = '2:4 1:3 0:5'
   bc_id_name_map = 'Dirichlet PeriodicY PeriodicZ'

   [./Dirichlet]
      [./Temperature]
         type = 'parsed_dirichlet'
         u = '0.0'
      [../]
   [../]

   [./PeriodicY]
      type = 'periodic'
      master_id = '1'
      slave_id = '3'
      boundary_offset = '0.0 1.0 0.0'
   [../]

   [./PeriodicZ]
      type = 'periodic'
      master_id = '0'
      slave_id = '5'
      boundary_offset = '0.0 0.0 1.0'
   [../]
[]

[Variables]
   [./Temperature]
      names = 'u'
      fe_family = 'LAGRANGE'
      order = 'FIRST'
[]

# Mesh related options
[Mesh]
   # This must be serial for periodic boundaries until libMesh/libmesh#977 is resolved
   # https://github.com/libMesh/libmesh/issues/977
   class = 'serial'

   [./Generation]
      dimension = '3'
      n_elems_x = '10'
      n_elems_y = '10'
      n_elems_z = '10'
      x_min = '0.0'
      x_max = '1.0'
      y_min = '0.0'
      y_max = '1.0'
      z_min = '0.0'
      z_max = '1.0'
      element_type = 'HEX8'
[]

#Linear and nonlinear solver options
[linear-nonlinear-solver]
   max_nonlinear_iterations =  25
   max_linear_iterations = 2500
   relative_residual_tolerance = '1.0e-14'
   relative_step_tolerance = '1.0e-12'
   minimum_linear_tolerance = '1.0e-10'
[]

# Visualization options
[vis-options]
   output_vis = 'true'
   vis_output_file_prefix = 'poisson_periodic_3d_yz'
   output_format = 'xda'
[]

# Options for print info to the screen
[screen-options]
   system_name = 'GRINS-TEST'
   print_equation_system_info = 'true'
   print_mesh_info = 'true'
   print_log_info = 'true'
   solver_verbose = 'true'
   solver_quiet = 'false'
[]
