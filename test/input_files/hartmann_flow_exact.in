# Mesh related options
[mesh-options]
mesh_option = create_2D_mesh
element_type = QUAD9

domain_x1_min = '0.0'
domain_x1_max = '2.0'

domain_x2_min = '0.0'
domain_x2_max = '1.0'

mesh_nx1 = '10' 
mesh_nx2 = '10'

# Options for tiem solvers
[unsteady-solver]
transient = false 
theta = 0.5
n_timesteps = 1
deltat = 0.1

#Linear and nonlinear solver options
[linear-nonlinear-solver]
max_nonlinear_iterations = 10 
max_linear_iterations = 2500

verify_analytic_jacobians = 0.0

initial_linear_tolerance = 1.0e-12

use_numerical_jacobians_only = 'true'

# Visualization options
[vis-options]
output_vis_time_series = false 
output_vis = true
vis_output_file_prefix = 'hartmann'
output_format = 'ExodusII'

# Options for print info to the screen
[screen-options]
print_equation_system_info = 'true' 
print_mesh_info = 'true'
print_log_info = 'true'
solver_verbose = 'true'
solver_quiet = 'false'

echo_physics = 'true'

# Options related to all Physics
[Physics]

enabled_physics = 'Electrostatics Magnetostatics IncompressibleNavierStokes LorentzForce'

# Boundary ids:
# j = bottom -> 0
# j = top    -> 2
# i = bottom -> 3
# i = top    -> 1

[./Magnetostatics]

FE_family = 'LAGRANGE_VEC'
A_order = 'FIRST'

sigma = '1.0'
mu = '1.0'

bc_ids = '0 2 1 3'
bc_types = 'prescribed_magnetic_flux prescribed_magnetic_flux unbounded unbounded'

B0 = '6.0'

B_wall_0 = '0.0 ${Physics/Magnetostatics/B0}'

B_wall_1 = '0.0 ${Physics/Magnetostatics/B0}'

[../Electrostatics]

FE_FAMILY = LAGRANGE
V_order = FIRST

bc_ids = '3 0 2 1'

bc_types = 'prescribed_current prescribed_current prescribed_current prescribed_current'

E_wall_0 = '0.0 0.0'
E_wall_1 = '0.0 0.0'
E_wall_2 = '0.0 0.0'
E_wall_3 = '0.0 0.0'

[../IncompressibleNavierStokes]

FE_family = LAGRANGE
V_order = SECOND
P_order = FIRST

rho = '1.0'
mu = '1.0'

bc_ids = '0 2 3'
bc_types = 'no_slip no_slip parabolic_profile'

parabolic_profile_coeffs_3 = '0.0 0.0 -4.0 0.0 4.0 0.0'
parabolic_profile_var_3 = 'u'
parabolic_profile_fix_3 = 'v'


[../LorentzForce]


[../VariableNames]

Temperature = 'T'
u_velocity = 'u'
v_velocity = 'v'
w_velocity = 'w'
pressure = 'p'
# Made these u and v as well to reuse test.
r_velocity = 'u'
z_velocity = 'v'

ElectricPotential = 'V'
MagneticPotential = 'A'

[]

[Materials]

[./Conductivity]

k = 1.0

[]
