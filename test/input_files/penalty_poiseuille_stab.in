# Mesh related options
[mesh-options]
mesh_class = serial
mesh_option = create_2D_mesh
element_type = QUAD9
mesh_nx1 = 32
mesh_nx2 = 16

domain_x1_max = 5.0
domain_x2_max = 1.0

# Options for tiem solvers
[unsteady-solver]
transient = false 
theta = 0.5
n_timesteps = 1
deltat = 0.1

#Linear and nonlinear solver options
[linear-nonlinear-solver]
max_nonlinear_iterations = 10 
max_linear_iterations = 2500

initial_linear_tolerance = 1.0e-12
minimum_linear_tolerance = 1.0e-12

relative_residual_tolerance = 1.0e-10
relative_step_tolerance     = 1.0e-10

# Currently broken when correction term is in place
#verify_analytic_jacobians = 1.e-6
use_numerical_jacobians_only = 'true'

# Visualization options
[vis-options]
output_vis_time_series = false 
output_vis = true
vis_output_file_prefix = penalty_poiseuille_stab
output_format = 'ExodusII xdr'

# Options for print info to the screen
[screen-options]
print_equation_system_info = 'true' 
print_mesh_info = 'true'
print_log_info = 'true'
solver_verbose = 'true' 
solver_quiet = 'false'

echo_physics = 'true'

# Options related to all Physics
[Physics]

enabled_physics = 'IncompressibleNavierStokes IncompressibleNavierStokesAdjointStabilization VelocityPenalty VelocityPenaltyAdjointStabilization'

# Options for Incompressible Navier-Stokes physics
[./IncompressibleNavierStokes]

FE_family = LAGRANGE
V_order = SECOND
P_order = FIRST

rho = 1.0
mu = 1.0

bc_ids = '1 3 2 0'
bc_types = 'parsed_dirichlet parsed_dirichlet no_slip no_slip'
bc_variables = 'u u na na'
#bc_values = '{y-y^2} {y-y^2} na na'
bc_values = '{(abs(y-.5)<.25)*(y-.25)*(.75-y)} {(abs(y-.5)<.25)*(y-.25)*(.75-y)} na na'

pin_pressure = true
pin_value = 100.0
pin_location = '2.5 0.5'

[../VelocityPenalty]

penalty_function = '{(abs(y-.5)>.25)*1e6}{0}{0}'
#penalty_function = '{0}{0}{0}'

[]

[Stabilization]

tau_constant = '10'
tau_factor = '0.05'

[]


[../VariableNames]

Temperature = 'T'
u_velocity = 'u'
v_velocity = 'v'
w_velocity = 'w'
pressure = 'p'

[]
